<Window x:Class="Dusza_Fogadas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dusza_Fogadas"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">Login</Label>

        <Label FontSize="25" VerticalAlignment="Center" Margin="10 0 0 0" HorizontalAlignment="Left" Grid.Row="1">Username</Label>
        <TextBox Height="50" HorizontalAlignment="Left" Margin="10 0 0 0" Width="375" Grid.Row="2" Background="LightGray">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Label FontSize="25" VerticalAlignment="Center" Margin="10 0 0 0" HorizontalAlignment="Left"  Grid.Row="3">Password</Label>
        <TextBox Height="50" HorizontalAlignment="Left" Margin="10 0 0 0" Width="375" Grid.Row="4" Background="LightGray">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Label x:Name="lblConfirmPassword" Visibility="Collapsed" FontSize="25" VerticalAlignment="Center" Margin="10 0 0 0" HorizontalAlignment="Left"  Grid.Row="5">Confirm Password</Label>
        <TextBox x:Name="txtConfirmPassword" Visibility="Collapsed" Height="50" HorizontalAlignment="Left" Margin="10 0 0 0" Width="375" Grid.Row="6" Background="LightGray">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Button x:Name="btnLogin" Click="btnLogin_Click" FontSize="25" Grid.Row="8" Width="375" Height="50" Content="Login">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnRegister" Click="btnRegister_Click" Visibility="Collapsed" FontSize="25" Grid.Row="8" Width="375" Height="50" Content="Register">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label x:Name="lblDontHave" Grid.Row="9" FontSize="18" HorizontalAlignment="Center">Don't have an account yet?</Label>
        <Button x:Name="btnDontHave" Click="btnDontHave_Click" Grid.Row="9" FontSize="15" Margin="0 20 0 0" Height="25" Width="200" Content="Click here to register" BorderThickness="0 0 0 2" Background="White"></Button>

        <Label x:Name="lblAlreadyHave" Visibility="Collapsed" Grid.Row="9" FontSize="18" HorizontalAlignment="Center">Don't have an account yet?</Label>
        <Button x:Name="btnAlreadyHave" Click="btnAlreadyHave_Click" Visibility="Collapsed" Grid.Row="9" FontSize="15" Margin="0 20 0 0" Height="25" Width="200" Content="Click here to log in" BorderThickness="0 0 0 2" Background="White"></Button>
    </Grid>
</Window>

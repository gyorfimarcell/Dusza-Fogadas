<Window x:Class="Dusza_Fogadas.EndGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dusza_Fogadas"
        mc:Ignorable="d"
        Title="EndGame" Height="600" Width="775">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"></RowDefinition>
            <RowDefinition Height="0.9*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="0.9*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label VerticalAlignment="Center" FontSize="30" Grid.ColumnSpan="2">End Game</Label>
        <Label x:Name="lblUsername" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">NevNevNev</Label>
        <Label x:Name="lblPoints" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">50</Label>
        <Button x:Name="btnBackToMenu" Click="btnBackToMenu_Click" Grid.Column="4" Width="60" Height="60" FontSize="15">Menu</Button>
        <Border BorderThickness="0 0 0 1" BorderBrush="Black" Grid.ColumnSpan="5"></Border>


        <Label Grid.Row="1" FontSize="25" VerticalAlignment="Center">Game Name</Label>
        <ComboBox x:Name="cbGames" FontSize="25" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Height="50" Margin="10 0 10 0"></ComboBox>

        <ListBox x:Name="lbSubjectsAndEvents" Grid.Row="2" Grid.ColumnSpan="5" Margin="15 0 15 0">
            
        </ListBox>

        <Button Click="btnEndGame_Click" x:Name="btnEndGame" Padding="35 0 35 0" Height="55" Grid.Row="3" Grid.ColumnSpan="5" HorizontalAlignment="Center" FontSize="20">End Game</Button>
    </Grid>
</Window>

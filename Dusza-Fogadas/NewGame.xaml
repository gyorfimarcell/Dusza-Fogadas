<Window x:Class="Dusza_Fogadas.NewGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dusza_Fogadas"
        mc:Ignorable="d"
        Title="NewGame" Height="600" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition Height="1.1*"></RowDefinition>
            <RowDefinition Height="1.1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label VerticalAlignment="Center" FontSize="30">Game Creation</Label>
        <Label x:Name="lblUsername" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">NevNevNev</Label>
        <Label x:Name="lblPoints" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">50</Label>
        <Button x:Name="btnBackToMenu" Click="btnBackToMenu_Click" Grid.Column="3" Width="60" Height="60" FontSize="15">Menu</Button>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="25" Margin="0 0 15 0">Game Name:</Label>
            <TextBox x:Name="txtGameName" VerticalContentAlignment="Center" FontSize="25" Width="275" Background="LightGray"></TextBox>
        </StackPanel>

        
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="25" Margin="0 0 15 0">Subjects</Label>
            <Button Width="30" Height="30"></Button>
        </StackPanel>

        
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="25" Margin="0 0 15 0">Events</Label>
            <Button Width="30" Height="30"></Button>
        </StackPanel>

    </Grid>
</Window>
